{
  "name": "@xmgh/stylelint-config-strict",
  "version": "1.0.5",
  "description": "strict shareable config for stylelint",
  "author": "maqiang1816@foxmail.com",
  "license": "MIT",
  "main": "index.js",
  "files": [
    "rules",
    "index.js"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/maqiang1816/stylelint-config-strict.git"
  },
  "keywords": [
    "stylelint",
    "stylelint-config",
    "strict"
  ],
  "scripts": {
    "dry-release": "npmpub --dry --verbose",
    "lint-staged": "lint-staged",
    "lint": "eslint . --ignore-path .gitignore",
    "release": "npmpub"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint",
      "git add"
    ]
  },
  "peerDependencies": {
    "stylelint": "^8.3.0 || ^9.0.0 || ^10.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "8.1.0",
    "@commitlint/config-conventional": "8.1.0",
    "eslint": "5.16.0",
    "eslint-config-stylelint": "11.1.0",
    "npmpub": "4.1.0",
    "stylelint": "10.1.0"
  },
  "eslintConfig": {
    "extends": [
      "stylelint"
    ]
  }
}
